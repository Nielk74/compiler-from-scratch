// Description:
// Test de la recherche dichotomique, avec un int prédéfini à trouver, ici 421.
//
//
// Historique:
//    crée le 10/06/2022
{
    int secret, user;
    secret = 421;
    println("Quel est mon nombre entre 0 et 1000 ?");
    user = readInt();
    while (! (user == secret)) {
        if (user < secret) {
            print("Trop petit !");
        } else {
            print("Trop grand !");
        }
        println(" Autre proposition ?");
        user = readInt();
    }
    println("Bravo...");
}
