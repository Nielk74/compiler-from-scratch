class A {

    int factorial(int n){
        
        if (n == 0){
            return 1;    
        } 

        else  {
            return  n * factorial(n-1) ;
        }  
    }       
}

{
    A a = new A();
    println(a.factorial(0));
    println(a.factorial(4));
    println(a.factorial(10));
}