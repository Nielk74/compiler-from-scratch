{
    int x = 0;
    int y = 3;
    
    while (x < 1 + 1) {
        println(x, " < 1 + 1");
        x = x + 1;
    }
    
    while (x > 1 - 1) {
        println(x, " > 1 - 1");
        x = x - 1;
    }

    while (x < 1 * 1) {
        println(x, " < 1 * 1");
        x = x + 1;
    }

    while (x > 1 / 2) {
        println(x, " > 1 / 2");
        x = x - 1;
    }

    while (x < y % 2) {
        println(x, " < ", y, " % 2");
        x = x + 1;
    }
}